@model IEnumerable<Cookbook.Models.Recipe>
@{
    ViewBag.SiteName = "Cookbook";
    ViewBag.Title = "Recipes";
}


<div class="col-sm-6 col-sm-offset-3">
    <div>
        <div class="well well-sm">
            <a asp-controller="recipe" asp-action="create" class="btn btn-success">New</a>
            <a asp-controller="Auth" asp-action="Logout" class="btn btn-success pull-right">Logout</a>
        </div>
        @{
            if (Model.Count() == 0)
            {
                <div class="text-center">Waiting for recipes to be added</div>
            }
            else
            {

                <ul class="nav">
                    @foreach (var item in Model)
                    {
                        <li><a asp-controller="recipe" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></li>
                    }
                </ul>
            }
        }
    </div>
</div>
