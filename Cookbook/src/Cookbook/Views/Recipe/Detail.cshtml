@model Cookbook.ViewModels.RecipeViewModel
@{
    ViewBag.SiteName = "Cookbook";
    ViewBag.Title = "Recipe Details";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>@Model.Name</h2>

        <div>
            <h3>Ingredients</h3>
            <ul>
                @foreach (var item in Model.Ingredients)
            {
                    <li>@item.Description</li>
                }
            </ul>
        </div>
        <div>
            <h2>Method</h2>
            <ol>
                @foreach (var item in Model.Method)
            {
                    <li>@item.Task</li>
                }
            </ol>
        </div>
    </div>
</div>