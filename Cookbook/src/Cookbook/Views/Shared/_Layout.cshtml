<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.SiteName - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/flatly/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div>
                <nav class="navbar navbar-inverse">
                    <div class="col-sm-6 col-sm-offset-3 navbar-header">
                        <a class="navbar-brand" asp-controller="recipe" asp-action="index">@ViewBag.SiteName</a>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <div id="main" class="container-fluid">
        @RenderBody()
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
    <script src="~/js/site.js"></script>
</body>
</html>
